<main class="container" id="app">
    <h1 class="center" data-aos="flip-up">Этап 7 (3)</h1>
    <h5 class="center">Использование технологии AJAX</h5>

    <div id="app">
        <div class="container z-depth-2">
            <h4 class="center blue-grey darken-1 white-text bold">Список новостей</h4>
            <div class="row">
                <div class="col s6 post" v-for="post in news" :key="post.id">
                    <div class="card blue-grey darken-1 z-depth-3">
                        <div class="card-content white-text">
                          <span class="card-title">Новость №{{post.id}}</span>
                          <p>{{post.content}}</p>
                        </div>
                      </div>
                </div>
            </div>
            <button class="btn green right-align" @click="loadNews">Подгрузить</button>
        </div>
    
        <div class="container z-depth-2">
            <h4 class="center blue-grey lighten-1 white-text bold">Комментарии</h4>
            <div class="row center valign-wrapper comment">
                <div class="col s3">
                    <input type="text" placeholder="Ваше имя" v-model="name">
                </div>
                <div class="col s7">
                    <input type="text" placeholder="Ваш комментарий" v-model="comment">
                </div>
                <div class="col s2">
                    <button class="btn blue" @click="addComment()">
                        Отправить
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col s6 post" v-for="comment in comments" :key="comment.id">
                    <div class="card blue-grey lighten-1 z-depth-3">
                        <div class="card-content white-text">
                          <span class="card-title">Комментарий №{{comment.id}} от {{comment.name}}</span>
                          <p>{{comment.content}}</p>
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </div>
</main>